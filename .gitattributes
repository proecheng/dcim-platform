# Auto detect text files and perform LF normalization
* text=auto

# Windows batch files must use CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# PowerShell scripts should use CRLF on Windows
*.ps1 text eol=crlf

# Shell scripts should use LF
*.sh text eol=lf

# Python files
*.py text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.vue text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Markdown
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.db binary
